<main>
    <br />
    <div class="w3-container medi-yellow">
        <h2>Change Password</h2>
    </div>
    <p class="profile-status1">{{status1}}</p>
    <p class="profile-status2">{{status2}}</p>
    <div class="form-container">
        <form class="w3-container" method="post" action="/change-password">
            <p>
                <label for="opw">Old Password</label>
                <input class="w3-input" type="password" name="oldPWD" id="opw"></p>
            <p>
                <label for="npw">New Password</label>
                <input class="w3-input" type="password" name="newPWD" id="npw"></p>
            <br />
            <button type="submit" class="button1">Apply</button>
            <button type="button" class="button1" onclick="editProfile()">Back</button>
        </form>
    </div>
</main>