<div class="w3-container medi-yellow">
            <h2>Sign Up</h2>
            <p class="extra"><a href="/login">(Already have an account? Login</a>)</p>
          </div>
          
          <div class="form-container">
          <form class="w3-container" method="post" action="{{ role }}">
            <p>
            <label for="fname">First Name</label>
            <input id="fname" class="w3-input" type="text" name="fname" required></p>
            <p>
            <label for="lname">Last Name</label>
            <input id="lname" class="w3-input" type="text" name="lname" required></p>
            <p>
            <label for="gender">Gender</label><br />
            <select id="gender" class="w3-input" name="gender" required>
              <option value="" label="-" selected disabled hidden></option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select></p>
            <p>
            <label for="dob">Date of birth</label>
            <input id="dob" class="w3-input" type="date" name="dob" value="" required></p>
            <p>
            <label for="email">Email</label>
            <input id="email" class="w3-input" type="email" name="email" value="" onblur="checkemail(this)" required></p>
            <p id="emailerror" class="hidden" style="color:red"> Email already existed!</p>
            <p>
            <label for="password">Password</label>
            <input id="password" class="w3-input" type="password" name="password" required></p>
            {{#ifEquals role "/signup/doctor"}}
            <p>
              <label for="splist">Specialism</label>
              <select class="w3-input" multiple id="splist" name="splist">
                {{#each list}}
                <option value="{{ this }}" {{#if this.selected}} selected {{/if}}>{{ this }}</option>
                {{/each}}
              </select>
            </p>
            {{/ifEquals}}
            <br/>
            <p><button type="submit" class="button1" id="bt1">Create Account</button></p>
            
          </form>
          </div>
