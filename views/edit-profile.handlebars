<main>
    <br />
    <div class="w3-container medi-yellow">
        <h2>Edit Profile</h2>
    </div>

    <p class="profile-status1">{{status1}}</p>
    <p class="profile-status2">{{status2}}</p>
    <div class="form-container">
        <form class="w3-container" method="post" action="/edit-profile">
            <p>
                <label for="fname">First Name</label>
                <input class="w3-input" type="text" name="fname" id="fname" placeholder="First name" value="{{user.fname}}" required></p>
            <p>
                <label for="lname">Last Name</label>
                <input class="w3-input" type="text" name="lname" id="lname" placeholder="Last name" value="{{user.lname}}" required></p>
            <p>
                <label for="email">Email</label>
                <input class="w3-input" type="email" name="email" id="email" placeholder="Email address" value="{{user.email}}" required readonly></p>
            <p>
                <label>Gender</label><br />
                <select name="gender" class="w3-input">
                   {{!--  <option value="" selected disabled hidden></option> --}}
                    <option value="male" {{genderSel1}}>Male</option>
                    <option value="female" {{genderSel2}}>Female</option>
                </select></p>
            <p>
                <label for="dob">Date of birth</label>
                <input class="w3-input" type="date" name="dob" id="dob" value={{user.dob}}></p>
            <p>
                <label for="address">Address</label>
                <input class="w3-input" type="text" name="address" id="address" placeholder="Address" value="{{user.address}}"></p>
            <br />
            <button type="submit" class="button1">Save</button>
            <button type="button" class="button1" onclick="changePWD()">Change Password</button>
            <button type="button" class="button1" onclick="backToDashboard()">Back</button>
        </form>
    </div>
</main>